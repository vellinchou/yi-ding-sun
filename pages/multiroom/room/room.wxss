.container-box {
  background-color: #333;
  height: 100vh;
}

.img-box {
  position: relative;
  display:inline-block;
  height: calc(100vh - 134.66vw);
  width: 25vw;
  vertical-align: middle;
}
.img-box image {
  position: absolute;
  max-width: calc(100vh - 138vw);
  max-height: calc(100vh - 138vw);
  width: 8vh;
  height: 8vh;
  top: calc(50vh - 75.33vw); 
  left: calc(12.5vw - 4vh);
}
.operate {
  position: fixed;
  /* bottom: 3vh; */
}

.player-box {
	position: relative; 
	display: inline-block; 
	overflow: hidden;
	width: 49vw;
	height: 65.33vw; 
	text-align: center;
  margin-bottom: 2vw;
  vertical-align: top;
}
.player-box:nth-child(2),.player-box:nth-child(4) {
   margin-left: 2vw; 
} 
.poster {
	position: absolute;  
  width: 100%;
	height: 100%; 
	background-image: url(https://mc.qcloudimg.com/static/img/2215c303b9a0d38ac4697708cd250dbc/people%402x.png);
	background-repeat: no-repeat;
	background-position:center;
	background-color: #000;
}
live-player {
  width: 100%;
	height: 100%; 
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}
.loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}
.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
