<!--pages/play/play.wxml-->
<view style="width:100%;height: 100%; background-color: black;">
   <view hidden="{{playing}}" style="width:100%; height:75rpx;" >
    <input style="background-color: #ccc; width:630rpx; border-radius:8rpx; height:60rpx;display:inline-block; margin-left:10px; margin-right:10px;margin-top:15rpx;" placeholder-style="font-size:30rpx; padding-left:10rpx" placeholder="请输入点播地址或者扫二维码进行输入" focus="{{focus}}" bindtap='onInputTap' value="{{playUrl}}"></input>
    <image style="width: 60rpx; height: 60rpx;display:inline-block; position:absolute;right:10px;margin-top:15rpx;" src="../Resources/QR_code.png" bindtap='onScanQR'></image>
  </view> 
  <view style="width:100%;height:{{playing?'100%':'calc(100% - 75rpx)'}};position:relative;">
    <video
      style="width:100%;height:100%;position:absolute;"
      id="video-vodPlayer"
      src="{{playUrl}}" 
      bindplay="onPlay"
      bindended="onEnded"
      bindpause="onPause"
      bindfullscreenchange="onFullScreenChange">
    </video> 
  </view>
</view>
