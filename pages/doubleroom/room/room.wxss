/* pages/livepushertest/room/room.wxss */
.container-box {
  background-color: #333;
  height: 100vh;
}
.img-box {
  position: relative;
  display:inline-block;
  height: 10vh;
  width: 25vw;
  vertical-align: middle;
}
.img-box cover-image {
  position: absolute;
  width: 8vh;
  height: 8vh;
  left: calc(12.5vw - 4vh);
}
.operate {
  position:fixed;
  margin-top: 60vh;
  bottom:0;
  z-index: 1;
}
.comment-box {
  position: relative;
  width: 100vw;
  height: calc(90vh - 69.33vw);
  margin-top: 2vw;
}
.comment {
  background-color: #262626;
  width: 100vw;
  height: calc(90vh - 75.33vw - 1.4rem);
  font-size: 13px;

}
.comment .comment-detail {
  padding: 5px 20px;
  color: #999;
}
.comment-input {
  position: absolute;
  bottom: 0;
  width: 90vw; 
  background-color: #4a4a4a;
  color: #acacac;
  padding: 3vw 5vw;
}
.player-box {
	position: absolute; 
	display: inline-block; 
	overflow: hidden;
	width: 100vw;
	height: 100vh; 
	text-align: center;
  vertical-align: top;
  right:0;
  z-index: 0;
}
.poster {
	position: absolute;  
	/* width: 49vw;  
	height: 65.33vw;  */
  width: 100%;
	height: 100%; 
	background-image: url(https://mc.qcloudimg.com/static/img/2215c303b9a0d38ac4697708cd250dbc/people%402x.png);
	background-repeat: no-repeat;
	background-position:center;
	background-color: #000;
}
live-player {
  /* width: 49vw;
  height: 65.33vw; */
  width: 100%;
	height: 100%; 
}
.character {
  position: absolute;
  left: 0;
  bottom: 0;
  /* z-index: 1000; */
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}
.loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}
.loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}
